{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "outDir": "dist",
    "baseUrl": "src",
    "declaration": true,
    "composite": false,
    "declarationMap": false,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}
