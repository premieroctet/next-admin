{
  "extends": "tsconfig/react-library.json",
  "include": ["./src/**/*"],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "src/tests",
    "src/**/*.test.ts",
    "src/**/*.test.tsx"
  ],
  "compilerOptions": {
    "lib": ["dom", "ESNext"],
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "rootDir": "./src",
    "moduleResolution": "bundler"
  }
}
