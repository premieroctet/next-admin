{
  "extends": "tsconfig/react-library.json",
  "include": ["./src/**/*"],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "src/tests",
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/generated"
  ],
  "compilerOptions": {
    "lib": ["dom", "ESNext"],
    "outDir": "dist",
    "target": "ESNext",
    "module": "ESNext",
    "rootDir": "./src",
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "paths": {
      "@prisma/client": ["./src/generated/prisma/client"]
    }
  }
}
