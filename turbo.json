{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NODE_ENV",
    "BASE_URL",
    "BASE_DOMAIN",
    "POSTGRES_PRISMA_URL",
    "POSTGRES_URL_NON_POOLING"
  ],
  "tasks": {
    "start": {},
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {},
    "test:coverage": {},
    "test:e2e": {},
    "database": {},
    "reset-database": {
      "cache": false
    }
  }
}
