{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["*"]
    },
    "strictNullChecks": true,
    "moduleResolution": "Bundler",
    "declaration": false,
    "declarationMap": false,
    "composite": false,
    "resolveJsonModule": true
  },
  "extends": "tsconfig/nextjs.json",
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
